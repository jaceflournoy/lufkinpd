<p id="notice"><%= notice %></p>

<div id="search">
  <%= form_tag citystreets_path, :method => 'get' do %>
    <%= text_field_tag :address_search, params[:address_search], :placeholder => "Address" %>
    <%= text_field_tag :name_search, params[:name_search], :placeholder => "Name" %>
    <%= text_field_tag :phone_search, params[:phone_search], :placeholder => "Callback Number" %>
    <%= text_field_tag :unit_search, params[:unit_search], :placeholder => "Unit Number" %>
    <%= submit_tag "Search" %>
  <% end %>
</div>
<center>
<p id="notice"><%= notice %></p>

<h1>City Street Dept. Call-Out</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Name</th>
      <th>Call Back</th>
      <th>Unit Assigned</th>
      <th>Problem</th>
      <th>Closest Intersection</th>
      <th>City</th>
      <th>State</th>
      <th>Lightout</th>
      <th>Lightred</th>
      <th>Roadhazard</th>
      <th>Needed</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citystreets.each do |citystreet| %>
      <tr>
        <td><%= citystreet.address %></td>
        <td><%= citystreet.name %></td>
        <td><%= citystreet.callback %></td>
        <td><%= citystreet.unitassigned %></td>
        <td><%= citystreet.problem %></td>
        <td><%= citystreet.closestintersection %></td>
        <td><%= citystreet.city_to_string %></td>
        <td><%= citystreet.state_to_string %></td>
        <td><%= citystreet.lightout_to_string %></td>
        <td><%= citystreet.lightred_to_string %></td>
        <td><%= citystreet.roadhazard_to_string %></td>
        <td><%= citystreet.needed %></td>
        <td><%= citystreet.comment %></td>
        <td><%= link_to '', citystreet, class: "far fa-eye"
        %></td>
        <td><%= link_to '', edit_citystreet_path(citystreet), class: "far fa-edit"
        %></td>
        <td><%= link_to '', citystreet, method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Call-Out', new_citystreet_path %>
  <br />-
  <br />
  <a href="/pages/afterhours.html">Back to After Hours Call-Out</a>
</center>