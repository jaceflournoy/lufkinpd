<%= form_with(model: citystreet, local: true) do |form| %>
  <% if citystreet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(citystreet.errors.count, "error") %> prohibited this citystreet callout from being saved:</h2>

      <ul>
      <% citystreet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, maxlength: 140, size: 30 %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, maxlength: 140, size: 30 %>
  </div>

  <div class="field">
    <%= form.label :callback, "Call Back" %>
    <%= form.text_field :callback, maxlength: 140, size: 30 %>
  </div>

  <div class="field">
    <%= form.label :unitassigned, "Unit Assigned" %>
    <%= form.text_field :unitassigned, maxlength: 140, size: 30 %>
  </div>

  <div class="field">
    <%= form.label :problem %>
    <%= form.text_area :problem, maxlength: 400 %>
  </div>

  <div class="field">
    <%= form.label :closestintersection, "Closest Intersection?" %>
    <%= form.text_field :closestintersection, maxlength: 140, size: 30 %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.check_box :city %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.check_box :state %>
  </div>

  <div class="field">
    <%= form.label :lightout %>
    <%= form.check_box :lightout %>
  </div>

  <div class="field">
    <%= form.label :lightred %>
    <%= form.check_box :lightred %>
  </div>

  <div class="field">
    <%= form.label :roadhazard %>
    <%= form.check_box :roadhazard %>
  </div>

  <div class="field">
    <%= form.label :needed, "What is needed, if anything?" %>
    <%= form.text_field :needed, maxlength: 140, size: 30 %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, maxlength: 400 %>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>
