<p id="notice"><%= notice %></p>
<div id="search">
  <%= form_tag vacationpatrols_path, :method => 'get' do %>
    <%= text_field_tag :name_search, params[:name_search], :placeholder => "Officer Name" %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<div class="apple_pagination">
  <%= will_paginate @vacationpatrols %>
</div>

<h1>Vacation Patrol</h1>

<table class="center">
  <thead>
    <tr>
      <th>Officer</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacationpatrols.each do |vacationpatrol| %>
      <tr>
        <td><%= vacationpatrol.officer.humanize.titleize %></td>
        <td><%= vacationpatrol.comment.humanize %></td>
        <td><%= link_to '', vacationpatrol, class: "far fa-eye"
        %></td>
        <td><%= link_to '', edit_vacationpatrol_path(vacationpatrol), class: "far fa-edit"
        %></td>
        <% if can? :delete, :all %>
      <td><%= link_to '', vacationpatrol, method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt" %></td>
          <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vacation Patrol', new_vacationpatrol_path %>
