<p id="notice"><%= notice %></p>
<% if can? :delete, :all %>

<div class="apple_pagination">
  <%= will_paginate @users %>
</div>

<h1>Users</h1>

<table class="center">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to '', user, class: "far fa-eye"
        %></td>
        <td><%= link_to '', edit_user_path(user), class: "far fa-edit"
        %></td>
        <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<%end %>