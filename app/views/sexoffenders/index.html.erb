<center>
<p id="notice"><%= notice %></p>
  <div id="search">
  <%= form_tag sexoffenders_path, :method => 'get' do %>
    <%= text_field_tag :name_search, params[:name_search], :placeholder => "Name" %>
    <%= submit_tag "Search" %>
  <% end %>
  </div>
<h1>Sex Offenders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <% if false %>
      <th>Date of Birth</th>
      <th>Address</th>
      <th>Offense</th>
      <th>Risklevel</th>
      <th>Officer</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sexoffenders.each do |sexoffender| %>
      <tr>
        <td><%= sexoffender.name.humanize %></td>
        <% if false %>
        <td><%= sexoffender.dateofbirth %></td>
        <td><%= sexoffender.address.humanize %></td>
        <td><%= sexoffender.offense.humanize %></td>
        <td><%= sexoffender.risklevel.humanize %></td>
        <td><%= sexoffender.officer.humanize %></td>
        <% end %>
        <td><%= link_to '', sexoffender , class: "far fa-eye"
        %></td>
        <td><%= link_to '', edit_sexoffender_path(sexoffender), class: "far fa-edit"
        %></td>
        <td><%= link_to '', sexoffender, method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sex Offender', new_sexoffender_path %>
</center>