<p id="notice"><%= notice %></p>
<div id="search">
  <%= form_tag genericcallouts_path, :method => 'get' do %>
    <%= text_field_tag :address_search, params[:address_search], :placeholder => "Address" %>
    <%= text_field_tag :name_search, params[:name_search], :placeholder => "Name" %>
    <%= text_field_tag :phone_search, params[:phone_search], :placeholder => "Callback Number" %>
    <%= text_field_tag :unit_search, params[:unit_search], :placeholder => "Unit Number" %>
    <%= submit_tag "Search" %>
  <% end %>
</div>
<center>
<p id="notice"><%= notice %></p>

<h1>Generic Call-Out</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Name</th>
      <th>Call Back</th>
      <th>Unit Assigned</th>
      <th>Problem</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genericcallouts.each do |genericcallout| %>
      <tr>
        <td><%= genericcallout.address.humanize %></td>
        <td><%= genericcallout.name.humanize %></td>
        <td><%= genericcallout.callback.humanize %></td>
        <td><%= genericcallout.unitassigned.humanize %></td>
        <td><%= genericcallout.problem.humanize %></td>
        <td><%= genericcallout.comment.humanize %></td>
        <td><%= link_to '', genericcallout, class: "far fa-eye"
        %></td>
        <td><%= link_to '', edit_genericcallout_path(genericcallout), class: "far fa-edit"
        %></td>
        <td><%= link_to '', genericcallout, method: :delete, data: { confirm: 'Are you sure?' }, class: "far fa-trash-alt" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Call-Out', new_genericcallout_path %>
  <br />-
  <br />
  <a href="/pages/afterhours.html">Back to After Hours Call-Out</a>
</center>